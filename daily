#!/bin/sh
brew update
brew upgrade
brew cleanup -s --force
npm update -g
for x in $(cat ~/Documents/gems.txt ); do gem update $x; done
update-repos ~/src/* ~/projects/*
cd ~/projects/dotfiles && git submodule foreach git pull 
cd ~/projects/lj-api
heroku mongo:pull
rake tire:index:drop INDEX=lj-development
rake environment tire:import CLASS=Act
rake environment tire:import CLASS=Venue
