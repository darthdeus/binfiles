#!/bin/sh
proj_dir=~/projects
brew update
brew upgrade
brew cleanup -s --force
npm update -g
for x in $(cat ~/Documents/install/gems.txt ); do gem update $x; done
update-repos ~/src/* $proj_dir/*
cd $proj_dir/dotfiles && git submodule foreach git pull
# update-lj-db
find $proj_dir -name \*.log -delete
for x in $(cat ~/.projects); do cd $proj_dir/$x; rake tmp:clear; ctags -R 2>/dev/null; done
